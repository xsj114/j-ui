@import "../common/variable.styl"

.j_select
    display inline-block
    position relative
    &_caret
        transition transform .3s
        transform rotateZ(0deg)
    &_reverse
        transform rotateZ(-180deg)
    &_tags
        position absolute
        top 50%
        transform translateY(-50%)
        z-index 1
        display flex
        align-items center
        flex-wrap wrap
        .j_tag
            margin 2px 0 2px 6px    
        &_input
            border none
            outline none
            padding 0
            background-color transparent
            color $--input-color
            font-size $--input-font-size
            margin-left 15px
            flex-grow 1
        .j_select_tags_input_large
            font-size $--input-large-font-size
        .j_select_tags_input_small
            font-size $--input-small-font-size
    .is_focus .j_input_inner
        border-color #409EFF
    &_empty
        margin 0
        padding 0
        text-align center
        color #999
        font-size $--input-font-size
    &_empty_small
        font-size $--input-small-font-size
    &_empty_large
        font-size $--input-large-font-size
