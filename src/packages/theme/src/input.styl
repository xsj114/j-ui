@import "../common/variable.styl"

.j_input
    display inline-block
    font-size $--input-font-size
    position relative

    .j_input_inner
        width 100%
        outline none
        box-sizing border-box
        height $--input-height
        padding $--input-padding
        border $--input-border
        border-color $--input-border-color
        border-radius $--input-border-radius
        font-size inherit
        color $--input-color
        line-height $--input-line-height
        &:focus
            border-color #409EFF
        &::placeholder
            color #c0c4cc

    .j_input_inner_prefix   
        padding-left 30px

    .j_input_inner_suffix  
        padding-right 30px

    .j_input_inner_prepend
        border-top-right-radius 0 
        border-bottom-right-radius 0 

    .j_input_inner_append
        border-top-left-radius 0 
        border-bottom-left-radius 0 

    .j_input_icon
        width 25px
        height 100%
        position absolute
        display flex
        align-items center
        justify-content center
        color $--input-icon-color
        font-size $--input-icon-font-size

        .j_input_icon_gesture
            cursor pointer

    .j_input_prefix
        top 0
        left 5px

    .j_input_suffix
        top 0
        right 5px

    .j_input_group_prepend
        display table-cell
        border $--input-border
        border-right none
        border-color $--input-border-color
        border-radius $--input-border-radius
        border-top-right-radius 0
        border-bottom-right-radius 0
        padding $--input-group-padding
        background-color $--input-group-background-color
        color $--input-group-color
        font-size $--input-font-size

    .j_input_group_prepend_round
        border-radius $--input-round
        border-top-right-radius 0
        border-bottom-right-radius 0

    .j_input_group_append
        display table-cell
        border $--input-border
        border-left none
        border-color $--input-border-color
        border-radius $--input-border-radius
        border-top-left-radius 0
        border-bottom-left-radius 0
        padding $--input-group-padding
        background-color $--input-group-background-color
        color $--input-group-color
        font-size $--input-font-size

    .j_input_group_append_round
        border-radius $--input-round
        border-top-left-radius 0
        border-bottom-left-radius 0

    .j_input_inner_large
        height $--input-large-height
        font-size $--input-large-font-size
        line-height $--input-large-line-height

    .j_input_inner_small
        height $--input-small-height
        font-size $--input-small-font-size
        line-height $--input-small-line-height

    .j_input_inner_round
        border-radius $--input-round

    .j_input_inner_round_prepend
        border-top-left-radius 0
        border-bottom-left-radius 0

    .j_input_inner_round_append
        border-top-right-radius 0
        border-bottom-right-radius 0

.j_input_group
    display inline-table
